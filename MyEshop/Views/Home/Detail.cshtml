@model DetailsViewModel
@{
    ViewData["Title"] = "کالا " + Model.Product.Name;
}

<div>
    <h1 class="display-5">@Model.Product.Name</h1>
    <hr/>
    @if (Model.Product.FileExtension == ".jpg" || Model.Product.FileExtension == ".png")
    {
        <img src="@($"/images/{Model.Product.Id}{Model.Product.FileExtension}")"
             alt="@Model.Product.Name"
             class="img-thumbnail" />
    }
    else
    {
        <video width="320" height="240" controls>
            <source src="@($"/images/{Model.Product.Id}{Model.Product.FileExtension}")" type="video/mp4">
        </video>
    }
    <p class="py-5 text-justify">@Model.Product.Description</p>
    <p>قیمت : @Model.Product.Item.Price</p>
    <dl>
        @foreach (var item in Model.Categories)
        {
            <dt><a>@item.Name</a></dt>
            <dd>@item.Description</dd>
        }
    </dl>
    <div>
        <a class="btn btn-primary" 
           asp-controller="Home"
           asp-action="AddToCart"
           asp-route-itemId="@Model.Product.ItemId">افزودن به سبد خرید</a>
    </div>
</div>

